<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->


    <style name="Theme.VoteR" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">sans-serif-condensed-medium</item>
<!--        <item name="buttonStyle">@style/Theme.VoteR.Button</item> -->
    </style>

    <style name="Username" parent="Theme.VoteR">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Theme.VoteR.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/secondaryColor</item>
<!--        <item name="buttonStyle">@style/Theme.VoteR.Button</item>-->
    </style>

    <style name="Theme.VoteR.Button" parent="@android:style/Widget.Button">
        <item name="android:bottomLeftRadius">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

</resources>