<resources>

    <style name="Widget.VoteR.AppWidget.Container" parent="android:Widget">
        <item name="android:id">@android:id/background</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="Widget.VoteR.AppWidget.InnerView" parent="android:Widget">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <style name="Theme.VoteR.Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">@color/secondaryColor</item>
        <item name="buttonStyle">@style/Theme.VoteR.Button</item>
    </style>

    <style name="Theme.VoteR.Button" parent="@android:style/Widget.Button">
        <item name="android:bottomLeftRadius">5dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <style name="Theme.VoteR.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VoteR.TextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="backgroundColor">@color/primaryLightColor</item>
    </style>

    <style name="Username" parent="Theme.VoteR">
        <item name="android:textSize">25sp</item>
    </style>
</resources>